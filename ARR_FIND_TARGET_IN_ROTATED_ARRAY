// Online C++ compiler to run C++ program online
#include <iostream>
#include <bits/stdc++.h>
#include <algorithm>

using namespace std;

int getIndex(int * arr, int size, int target) {
        int *L = arr;
        int *H = arr + size - 1;
        int i = 0;
        while((H-L) >= 1) {
            if(*H == target) {
                return H-arr;
            }
            if(*L == target) {
                return L-arr;
            }
            if(*(L + (H-L)/2) == target) {
                return L + (H-L)/2 - arr;
            }
            if(*(L + (H-L)/2) < *H) {
                if(target < *H)
                    L = L + (H-L)/2;
                else
                    H = L + (H-L)/2;
            }
            else {
                if(target > *L)
                    H = L + (H-L)/2;
                else
                    L = L + (H-L)/2;
            }
        }
        return -1;
}

int main() {
    // Write C++ code here
        int arr[] = {9,10,11,12,13,14,1,2,3,4,5,6,7,8};
        
        int size = sizeof(arr)/sizeof(int);
        int target = 9;
        int index = getIndex(arr,size,target);
        printf("Index of target %d is %d",arr[index],index);
        
        
    return 0;
}
